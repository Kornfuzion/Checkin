<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.checkin.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" 
        android:background="#252525">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher" />
		
         <TextView
            android:id="@+id/logo"
            android:layout_width="0dip"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Favourite Places" 
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            />
         
         <RelativeLayout
             android:layout_width="50dp"
             android:gravity="center"
             android:layout_height="match_parent" >

             <ImageView
                 android:id="@+id/refresh"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="#252525"
                 android:contentDescription="@string/img_desc"
                 android:onClick="refreshPlaces"
                 android:src="@drawable/refresh" />

             <ProgressBar
                 android:id="@+id/progressBar"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />

         </RelativeLayout>
    </LinearLayout>
      
     <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical" 
           android:gravity="center">
       <TextView
            android:id="@+id/username"
            android:background="#642D64"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:orientation="horizontal" 
           android:background="#FFFFFF"
           android:gravity="center_vertical">

           <ImageView
               android:id="@+id/profilepic"
               android:gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_width="90dp"
               android:layout_height="match_parent"
               android:contentDescription="@string/img_desc"
               android:src="@drawable/profileblue" />

           <TextView
               android:id="@+id/aboutme"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
                />
           
       </LinearLayout>
       </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFFFF" />

        <ListView
            android:id="@+id/places"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:divider="#EEEEEE"
            android:paddingBottom="10dp"
            android:dividerHeight="2dp" >
        </ListView>


       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/home"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/img_desc"
                android:src="@drawable/homepurple" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E2E2E2" />
				
			<ImageView
                android:id="@+id/pin"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/pingrey" 
                android:contentDescription="@string/img_desc"
                android:onClick="startMapActivity"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E2E2E2" />

            <ImageView
                android:id="@+id/blank"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/img_desc"
                android:src="@drawable/blank" />
        </LinearLayout>
        
</LinearLayout>