<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.checkin.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" 
        android:background="#642D64">
		
         <TextView
            android:id="@+id/logo"
            android:layout_width="0dip"
            android:layout_weight="5"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="CheckIn" 
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            />
         
         <RelativeLayout
             android:layout_width="40dp"
             android:gravity="center"
             android:layout_height="40dp" >

             <ImageView
                 android:id="@+id/refresh"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="#642D64"
                 android:onClick="refreshPlaces"
                 android:src="@drawable/refresh" />

             <ProgressBar
                 android:id="@+id/progressBar"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />

         </RelativeLayout>
    </LinearLayout>
      
       <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="UserJohnDoe"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:orientation="horizontal" >

           <ImageView
               android:id="@+id/profilepic"
               android:layout_width="90dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:src="@drawable/james_profile_pic" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="20dp"
               android:text="\nJohn Fake Doe\nToronto. 21. Swag."
                />
           
       </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#E2E2E2" />

        <ListView
            android:id="@+id/places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="#E2E2E2"
            android:paddingBottom="10dp"
            android:dividerHeight="2dp" >
        </ListView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#E2E2E2" />

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/home"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/home_purple" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E2E2E2" />
				
			<ImageView
                android:id="@+id/pin"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/pin_grey" 
                android:onClick="startMapActivity"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E2E2E2" />

            <ImageView
                android:id="@+id/blank"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/blank" />
        </LinearLayout>
        
</LinearLayout>