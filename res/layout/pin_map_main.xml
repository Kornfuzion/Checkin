<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.checkin.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="50px"
            android:layout_height="match_parent"
            android:background="#642D64"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/logo"
            android:layout_width="430px"
            android:layout_height="50px"
            android:background="#642D64"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="Pin Location"
            android:textColor="#FFFFFF"
            android:textSize="30px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="480px" >

        </FrameLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.29"
        android:orientation="vertical"
        android:background="#642D64"
        android:gravity="center" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:text="Okay"
            android:gravity="center"
        	android:background="#D2D2D2" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home"
            android:layout_width="159px"
            android:layout_height="match_parent"
            android:src="@drawable/home_purple" />

        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#F2F2F2" />

        <ImageView
            android:id="@+id/pin"
            android:layout_width="159px"
            android:layout_height="match_parent"
            android:src="@drawable/pin_purple" />

        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#F2F2F2" />

        <ImageView
            android:id="@+id/blank"
            android:layout_width="159px"
            android:layout_height="match_parent"
            android:src="@drawable/blank" />
    </LinearLayout>

</LinearLayout>